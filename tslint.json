{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "object-literal-sort-keys": false,
        "member-ordering": false,
        "quotemark": [
            true,
            "double",
            "avoid-template",
            "avoid-escape"
        ],
        "one-variable-per-declaration": false,
        "no-unused-expression": false,
        "max-classes-per-file": false,
        "no-bitwise": false,
        "jsx-no-lambda": false,
        "interface-name": false,
        "member-access": false,
        "no-console": false,
        "no-empty-interface": false,
        "comment-format": false,
        "curly": [
            true,
            "ignore-same-line"
        ],
        "variable-name": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "eofline": true,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "no-string-literal": false,
        "no-trailing-whitespace": [
            true,
            "ignore-comments",
            "ignore-template-strings"
        ],
        "semicolon": [
            true,
            "always",
            "ignore-interfaces"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "whitespace": [
            true,
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type-operator",
            "check-preblock"
        ],
        "jsx-boolean-value": false
    },
    "jsRules": {
        "object-literal-sort-keys": false,
        "no-shadowed-variable": false,
        "curly": false,
        "no-string-literal": false,
        "variable-name": false,
        "no-unused-expression": [
            true,
            "allow-fast-null-checks"
        ],
        "no-console": false,
        "no-empty": false
    }
}
